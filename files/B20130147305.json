   <td style=\"\" valign=\"middle\" width=\"425\">\r\n                        <div class=\"TabelTekst\">Godartet tumor i urinveje (ekskl. godartet nyretumor)</div>\r\n                     </td>\r\n                  </tr>\r\n                  <tr>\r\n                     <td colspan=\"2\" style=\"\" valign=\"middle\" width=\"255\">\r\n                        <div class=\"TabelTekst\">DD32*</div>\r\n                     </td>\r\n                     <td style=\"\" valign=\"middle\" width=\"425\">\r\n                        <div class=\"TabelTekst\">Godartet tumor i hjernehinder</div>\r\n                     </td>\r\n                  </tr>\r\n                  <tr>\r\n                     <td colspan=\"2\" style=\"\" valign=\"middle\" width=\"255\">\r\n                        <div class=\"TabelTekst\">DD33*</div>\r\n                     </td>\r\n                     <td style=\"\" valign=\"middle\" width=\"425\">\r\n                        <div class=\"TabelTekst\">Godartet tumor i hjerne og andre dele af centralnervesystemet</div>\r\n                     </td>\r\n                  </tr>\r\n                  <tr>\r\n                     <td colspan=\"2\" style=\"\" valign=\"middle\" width=\"255\">\r\n                        <div class=\"TabelTekst\">DD35. 2</div>\r\n                     </td>\r\n                     <td style=\"\" valign=\"middle\" width=\"425\">\r\n                        <div class=\"TabelTekst\">Neoplasma benignum glandulae pituitariae</div>\r\n                     </td>\r\n                  </tr>\r\n                  <tr>\r\n                     <td colspan=\"2\" style=\"\" valign=\"middle\" width=\"255\">\r\n                        <div class=\"TabelTekst\">DD35. 3</div>\r\n                     </td>\r\n                     <td style=\"\" valign=\"middle\" width=\"425\">\r\n                        <div class=\"TabelTekst\">Neoplasma benignum ductus craniopharyngei</div>\r\n                     </td>\r\n                  </tr>\r\n                 